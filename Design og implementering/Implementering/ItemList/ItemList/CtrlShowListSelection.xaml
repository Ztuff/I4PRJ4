<UserControl x:Class="ItemList.CtrlShowListSelection"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280"
             FontSize="48">
    <UserControl.Resources>
        <ResourceDictionary Source="pack://application:,,,/ResourcesDictionary;component/Dictionary.xaml"/>
    </UserControl.Resources>
    <Grid>
        <Button x:Name="BtnInFridge" Content="I køleskab" HorizontalAlignment="Left" Margin="95,300,0,0" VerticalAlignment="Top" Width="300" Height="300" Click="BtnInFridge_Click"/>
        <Button x:Name="BtnShoppingList" Content="Indkøbsliste" HorizontalAlignment="Left" Margin="490,300,0,0" VerticalAlignment="Top" Width="300" Height="300" Click="BtnShoppingList_Click"/>
        <Button x:Name="BtnStdContent" HorizontalAlignment="Left" Margin="885,300,0,0" VerticalAlignment="Top" Width="300" Height="300" Click="BtnStdContent_Click">
            <TextBlock TextAlignment="Center"> Standard-<LineBreak/>beholdning</TextBlock>
        </Button>
        <TextBlock HorizontalAlignment="Left" Margin="95,120,0,0" TextWrapping="Wrap" Text="Vælg en liste" VerticalAlignment="Top"/>
    </Grid>
</UserControl>
